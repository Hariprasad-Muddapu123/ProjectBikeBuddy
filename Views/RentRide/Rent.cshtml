<html>
<head>
    <title>
        Register Your Bike
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet" />
    <style>
        body {
                 font-family: 'Roboto', sans-serif;
             }
    </style>
</head>
<body class="bg-white">
    <header class="flex justify-between items-center p-4 bg-white shadow-md">
        <div class="flex items-center">
            <img alt="Logo" class="h-10 w-10" height="50" src="https://storage.googleapis.com/a1aa/image/X9eVQjndnmwtFquE92RdeUROoPljImfNregR6mpmH7squyIPB.jpg" width="50" />
        </div>
        <nav class="flex space-x-4">
            <a class="text-gray-700 hover:text-gray-900" href="#">
                Home
            </a>
            <a class="text-gray-700 hover:text-gray-900" href="#">
                Profile
            </a>
        </nav>
    </header>
    <main class="max-w-4xl mx-auto p-6">
        <h1 class="text-3xl font-bold text-center text-orange-500 mb-6">
            Register Your Bike
        </h1>
        <div class="flex justify-between items-center mb-6">
            <div class="w-1/2 space-y-4">
                <div>
                    <label class="block text-gray-700">
                        Bike Model
                    </label>
                    <input class="w-full p-2 border border-orange-500 rounded" placeholder="Enter Your Bike Model" type="text" />
                </div>
                <div>
                    <label class="block text-gray-700">
                        Bike Number
                    </label>
                    <input class="w-full p-2 border border-orange-500 rounded" placeholder="Enter Your Bike Number" type="text" />
                </div>
                <div>
                    <label class="block text-gray-700">
                        Bike Location
                    </label>
                    <input class="w-full p-2 border border-orange-500 rounded" placeholder="Enter Your Location" type="text" />
                </div>
                <div>
                    <label class="block text-gray-700">
                        Bike Address
                    </label>
                    <input class="w-full p-2 border border-orange-500 rounded" placeholder="Enter Your Address" type="text" />
                </div>
                <div>
                    <label class="block text-gray-700">
                        Bike Image
                    </label>
                    <input class="w-full p-2 border border-orange-500 rounded" type="file" />
                </div>
                <div>
                    <label class="block text-gray-700">
                        Bike Documents
                    </label>
                    <input class="w-full p-2 border border-orange-500 rounded" type="file" />
                </div>
                <button class="w-full bg-orange-500 text-white p-2 rounded">
                    Register
                </button>
            </div>
            <div class="w-1/2">
                <img alt="Person registering a bike at a rental shop" class="w-full h-auto" height="400" src="https://storage.googleapis.com/a1aa/image/TP6eNe1fufrmrTJVIW0KeebUr5T6WXwEQSfAtfsmvJM1vrMyTA.jpg" width="400" />
            </div>
        </div>
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-4">
            Registered Bikes
        </h2>
        <div class="grid grid-cols-2 gap-4">
            <div class="bg-gray-100 p-4 rounded shadow-md">
                <img alt="Yamaha Fascino 125" class="w-full h-auto mb-4" height="100" src="~/Images/Fascino 125 FI.webp" width="150" />
                <h3 class="text-xl font-bold text-gray-800">
                    Yamaha Fascino 125
                </h3>
                <p class="text-gray-700">
                    Available upto : 15/11/2024
                </p>
                <p class="text-gray-700">
                    Location : Hyderabad
                </p>
                <p class="text-gray-700">
                    Address : Madhapur
                </p>
                <button class="w-full bg-orange-500 text-white p-2 rounded mt-2">
                    Remove
                </button>
            </div>
            <div class="bg-gray-100 p-4 rounded shadow-md">
                <img alt="Yamaha MT 15" class="w-full h-auto mb-4" height="100" src="~/Images/Fascino 125 FI.webp" width="150" />
                <h3 class="text-xl font-bold text-gray-800">
                    Yamaha MT 15
                </h3>
                <p class="text-gray-700">
                    Available upto : 15/11/2024
                </p>
                <p class="text-gray-700">
                    Location : Hyderabad
                </p>
                <p class="text-gray-700">
                    Address : Madhapur
                </p>
                <button class="w-full bg-orange-500 text-white p-2 rounded mt-2">
                    Remove
                </button>
            </div>
        </div>
    </main>
</body>
</html>

