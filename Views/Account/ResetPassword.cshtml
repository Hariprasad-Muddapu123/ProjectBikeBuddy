@model BikeBuddy.Models.ResetPasswordViewModel
@{

    Layout = "_BikeBuddyLayout";
}
<!DOCTYPE html>
<html>
<head>
    <title>Reset Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body >
    <div class="container d-flex justify-content-center align-items-center main-content mt-6 mb-3">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold text-center mb-6">Reset Password</h1>

        <!-- Display TempData Message -->
        @if (TempData["Message"] != null)

        {
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
                <p>@TempData["Message"]</p>
            </div>
        }

        <!-- Reset Password Form -->
        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="All" class="text-red-500 mb-4"></div>

            <!-- Hidden fields for Token and Email -->
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <!-- New Password Field -->
            <div class="mb-4">
                <label asp-for="NewPassword" class="block text-gray-700 mb-2 font-semibold"></label>
                <input asp-for="NewPassword"
                       type="password"
                       placeholder="New Password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500" />
                <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-gray-700 mb-2 font-semibold"></label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       placeholder="Confirm Password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit"
                        class="bg-orange-500 text-white px-6 py-2 rounded-full hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-orange-500">
                    Reset Password
                </button>
            </div>
        </form>
    </div>
    </div>
</body>
</html>
