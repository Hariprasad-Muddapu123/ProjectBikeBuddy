@model BikeBuddy.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_BikeBuddyLayout";
}

<html>
<head>
    <title>Sign Up</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body >
    <div class="container d-flex justify-content-center align-items-center main-content mt-6 mb-3">

        <div class="bg-gradient p-8 rounded-lg shadow-lg w-96">
            <h2 class="text-2xl font-bold mb-6 text-center">Sign up</h2>
            <form asp-action="Signup" method="post">
                <div class="mb-4">
                    <label class="block text-sm font-semibold mb-2">User Name</label>
                    <div class="flex items-center border-b border-gray-300 py-2">
                        <i class="fas fa-user text-gray-500 mr-3"></i>
                        <input asp-for="UserName" type="text" placeholder="Enter User Name*" class="w-full focus:outline-none">  
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-semibold mb-2">Email</label>
                    <div class="flex items-center border-b border-gray-300 py-2">
                        <i class="fas fa-envelope text-gray-500 mr-3"></i>
                        <input asp-for="Email" type="email" placeholder="Enter Email ID" class="w-full focus:outline-none">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-semibold mb-2">Mobile</label>
                    <div class="flex items-center border-b border-gray-300 py-2">
                        <i class="fas fa-phone text-gray-500 mr-3"></i>
                        <input asp-for="Mobile" type="text" placeholder="Enter Mobile Number" class="w-full focus:outline-none"> 
                    </div>
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-semibold mb-2">Password</label>
                    <div class="flex items-center border-b border-gray-300 py-2">
                        <i class="fas fa-lock text-gray-500 mr-3"></i>
                        <input asp-for="Password" type="password" placeholder="Enter Password" class="w-full focus:outline-none">   
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-6">
                    <label class="block text-sm font-semibold mb-2">Confirm Password</label>
                    <div class="flex items-center border-b border-gray-300 py-2">
                        <i class="fas fa-lock text-gray-500 mr-3"></i>
                        <input asp-for="ConfirmPassword" type="password" placeholder="Enter Confirm Password" class="w-full focus:outline-none">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="text-center mb-4">
                    <span class="text-sm">Already have an account? <a asp-controller="Account" asp-action="login" class="text-blue-500">Login</a></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="bg-orange-500 text-white py-2 px-4 rounded-full w-full">SignUP</button>
                </div>
            </form>
            @if (TempData["Message"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mt-4">
                    <strong>@TempData["Message"]</strong>
                </div>
            }
        </div>
    </div>
</body>
</html>

